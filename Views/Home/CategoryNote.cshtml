@model List<Note>
@{
    ViewData["Title"] = "Category Note";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">@ViewBag.CategoryName Listesi</h1>

        @if (Model.Count == 0)
        {
            <p class="text-center text-danger">Herhangi bir not bulunamadı.</p>
        }
        else
        {
            <div class="d-flex flex-wrap gap-3">
                @foreach (var categoryNote in Model)
                {
                    <div class="card" style="width: 18rem;">
                        <img src="@categoryNote.Category.ImageURL" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@categoryNote.Title</h5>
                            <p class="card-text">@categoryNote.Title Notu</p>
                            <a href="/Home/NoteDetails/@categoryNote.Id" class="btn btn-primary">Detaya Git</a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

